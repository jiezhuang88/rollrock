<% title "后台管理" %>

<p><%= link_to "新建菜单", new_post_path %></p>

<hr />
<%= csrf_meta_tag %>

<% for post in @posts %>

	<div class="post">
		
		<h2><%= link_to post.title, post%></h2>
		
		<p class="content">			
			<%= post.content.html_safe %>
			<br /><br />
			<%= link_to "Edit", edit_post_path(post) %> | <%= button_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %>
		</p>
		
	</div>	

<% end %>

<%= display_categories(@posts).html_safe %>

